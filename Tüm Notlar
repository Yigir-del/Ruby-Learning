puts "enter a number: "
num = gets.chomp.to_f
a = 1
b = 1
kasa = []
kasa << b
while kasa.length() != num     # fibonacci dizisi

  kasa << a
 
   c = a + b
   
   b = a
   a = c

end
puts kasa
